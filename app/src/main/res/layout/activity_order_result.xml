<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderResult"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Your Order"
        app:fontFamily="sans-serif-smallcaps"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/order"
        android:background="@color/gradient2"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu yang dipesan"/>
        <TextView
            android:id="@+id/menuresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="menu"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Pengataran Pesanan"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/wakturesult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="waktu"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Pemesan"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/alamatresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="alamat"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</RelativeLayout>